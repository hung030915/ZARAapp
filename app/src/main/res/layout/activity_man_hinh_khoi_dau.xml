<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ManHinhKhoiDau_Activity">

    <ImageView
        android:id="@+id/imv_icon2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shap_mankhoidau" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ellipsize="none"
        android:gravity="center"
        android:singleLine="false"
        android:layout_margin="10dp"
        android:text="Wellcome to Project"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/gl_line1"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_tittle"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.6"
        android:orientation="vertical"
        android:id="@+id/gl_line1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_btn_dangnhap"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_tittle"
        app:layout_constraintRight_toRightOf="@id/gl_line1"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints"
        android:id="@+id/btn_dangNhap_begin"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"
        android:id="@+id/gl_line2"/>

    <ImageView
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/imv_anh"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.85"
        android:orientation="horizontal"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn chưa có tài khoản ?"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/gl_line3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="15dp"
        android:id="@+id/tv_dangky_begin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make by Team 4"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/gl_line3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/gl_line1"
        android:padding="20dp"
        android:id="@+id/tv_creator_begin"/>
</androidx.constraintlayout.widget.ConstraintLayout>